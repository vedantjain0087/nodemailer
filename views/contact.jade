extends layout
block content
  .container
    form(method='post' , action = 'contact/send')
      h1 contact
      .form-group
        label Name
        input.form-control(type='text',name='name',placeholder='name')
      .form-group
        label Email
        input.form-control(type='text',name='email',placeholder='Email')
      .form-group
        label message
        input.form-control(type='text',name='message',placeholder='Message')
      input.form-control.btn.btn-default(type='submit')   
